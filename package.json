{
  "name": "thebookstore",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "url": "https://github.com/dhayaec/thebookstore.git"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2",
    "graphql-yoga": "^1.14.12",
    "prisma-binding": "^2.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom src/",
    "test:server": "jest ./server --watch",
    "eject": "react-scripts eject",
    "lint": "eslint src/ server/ --config .eslintrc.json --fix",
    "server": "nodemon server/",
    "debug": "nodemon --inspect server/",
    "migrate": "prisma deploy",
    "seed": "prisma seed",
    "reset": "prisma reset",
    "boot": "cd database && docker-compose up -d && cd ..",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "jest": "20.0.4",
    "jest-cli": "20.0.4",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.1",
    "prettier-eslint": "^8.8.2",
    "prisma": "^1.11.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "npm test -- --coverage",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/src"
    ]
  }
}
